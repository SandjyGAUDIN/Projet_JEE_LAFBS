        <servlet-class>sio.leo.weblafbs.Controleur.StatistiqueNoIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatsFreqActivSalle</servlet-name>
        <servlet-class>sio.leo.weblafbs.Controleur.StatsFreqActivSalle</servlet-class>
    </servlet>
    <servlet>
