    <servlet>
        <servlet-name>AbonneServlet</servlet-name>
        <servlet-class>sio.leo.weblafbs.Controleur.AbonneServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AboInfo</servlet-name>
        <servlet-class>sio.leo.weblafbs.Controleur.AboInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AboModif</servlet-name>
        <servlet-class>sio.leo.weblafbs.Controleur.AboModif</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AboAjout</servlet-name>
        <servlet-class>sio.leo.weblafbs.Controleur.AboAjout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Statistique</servlet-name>
        <servlet-class>sio.leo.weblafbs.Controleur.Statistique</servlet-class>
