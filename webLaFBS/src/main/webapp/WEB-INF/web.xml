    <servlet>
        <servlet-name>UserConnection</servlet-name>
        <servlet-class>sio.leo.weblafbs.Controleur.UserConnection</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AbonneServlet</servlet-name>
        <url-pattern>/Abonne</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AboInfo</servlet-name>
        <url-pattern>/AboInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AboModif</servlet-name>
        <url-pattern>/AboModif</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AboAjout</servlet-name>
        <url-pattern>/AboAjout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Statistique</servlet-name>
        <url-pattern>/Statistique</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatistiqueNoIn</servlet-name>
        <url-pattern>/StatistiqueNoIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatsFreqActivSalle</servlet-name>
        <url-pattern>/StatsFreqActivSalle</url-pattern>
